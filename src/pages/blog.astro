---
const pageTitle = "The Blog";
import PageLayout from "../layouts/PageLayout.astro"
import PostIndexCard from "../components/PostIndexCard.astro"
import { getCollection } from "astro:content";
const tabTitle = "Blog";
const paragraph = false;
const allPosts =  (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

---
<PageLayout pageTitle={pageTitle} tabTitle={tabTitle} paragraph={paragraph}>
    <PostIndexCard allPosts={allPosts} />
</PageLayout>