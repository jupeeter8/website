---
import Nav from "./Nav.astro";
const { pageTitle, paragraph } = Astro.props;
---

<header>
    <h1>{pageTitle}</h1>
    {
        paragraph && (
            <p>
                On the web since 2009. Programmer, OSS Enthusiat, Traveller,
                Human.
            </p>
        )
    }
    <Nav />
</header>

<style>
    header {
        margin-bottom: 2em;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid rgb(170, 135, 40);
    }

    header h1 {
        font-weight: 400;
        font-style: normal;
        font-size: 3em;
        margin-top: 0;
        margin-bottom: 0.5rem;
    }

    h1 + p {
        font-weight: 300;
        margin-top: 0;
        margin-bottom: 1.5rem;
    }
</style>
