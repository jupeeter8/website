---
import Nav from "./Nav.astro";
const { pageTitle, paragraph } = Astro.props;
---

<header>
    <h1>{pageTitle}</h1>
    {paragraph && <p>{paragraph}</p>}
    <Nav />
</header>

<style>
    header {
        margin-bottom: 3rem;
        padding-bottom: 0.5rem;
        /* border-bottom: 1px solid rgb(170, 135, 40); */
    }

    header h1 {
        font-family: "Shizuru", system-ui;
        font-style: normal;
        font-size: 2.5rem;
        margin-top: 0;
        margin-bottom: 0.5rem;
        color: var(--accent-color);
    }

    h1 + p {
        font-weight: 300;
        margin-top: 0;
        margin-bottom: 1rem;
    }

    @media (width <= 500px) {
        header {
            margin-bottom: 2rem;
            padding-bottom: 0.5rem;
        }

        header h1 {
            font-style: normal;
            font-size: 2.5rem;
            margin-top: 0;
            margin-bottom: 0.5rem;
            max-width: 50%;
        }

        h1 + p {
            font-size: smaller;
            margin-top: 0;
            margin-bottom: 1rem;
            max-width: 90%;
        }
    }
</style>
