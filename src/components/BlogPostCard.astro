---
const { allPosts } = Astro.props;
const formatDate = (date: string | Date) => {
    return new Date(date).toLocaleDateString("en-US", {
        year: "numeric",
        month: "long",
        day: "numeric",
    });
};
---

<div class="blog-home">
    <div class="blog-list">
        {
            allPosts.map((post: any) => (
                <a href={post.id}>
                    <article class="entry-card">
                        <div class="entry-img">
                            <img
                                src={post.data.image.url}
                                alt={post.data.image.alt}
                            />
                        </div>
                        <div class="entry-meta">
                            <h2>{post.data.title}</h2>
                            <p class="entry-desc">{post.data.description}</p>
                            <p>{formatDate(post.data.pubDate)}</p>
                        </div>
                    </article>
                </a>
            ))
        }
    </div>
    <aside class="meta"></aside>
</div>

<style>
    body {
    }
    a {
        color: inherit;
    }
    a:link {
        color: inherit;
        text-decoration: none;
    }
    a:hover {
        color: inherit;
        text-decoration: none;
    }
    a:visited {
        color: inherit;
        text-decoration: none;
    }
    .entry-card {
        display: flex;
        justify-content: baseline;
        align-items: center;
        margin-bottom: 1.5rem;
        background-color: #f9f7f1;
        color: 2f2f2f;
        border-bottom: 3px solid lightgrey;
    }

    .entry-img {
        max-width: 20%;
        max-height: fit-content;
        margin-right: 1rem;
    }

    .entry-img img {
        display: block;
        width: 100%;
        height: auto;
        -webkit-filter: grayscale(100%); /* Safari 6.0 - 9.0 */
        filter: grayscale(100%);
    }

    .entry-meta {
        flex-grow: 1;
    }
    .entry-meta h2 {
        font-family: "Caslonia", serif;
        font-size: 2.5rem;
        margin: 0 0 0.5rem 0;
        max-width: 80%;
    }

    .entry-meta p {
        margin: 0;
        font-size: 0.8rem;
        margin: 0;
    }

    .entry-meta .entry-desc {
        margin-bottom: 1.5rem;
    }

    @media (width <= 450px) {
        .entry-img {
            display: none;
        }
        .entry-card {

        }
        .entry-meta {
            padding: 1rem;
        }
        .entry-meta h2 {
            font-size: 2rem;
            max-width: unset;
        }
    }
</style>
